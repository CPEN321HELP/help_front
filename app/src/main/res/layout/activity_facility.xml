<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:scaleType="fitXY" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="240dp"
            android:layout_height="42dp"
            android:numStars="5"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:stepSize="0.1"
            android:layout_gravity="center"
            android:theme="@style/RatingBar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/facilityRatingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rating_timhortons"
                android:layout_gravity="start"
                android:layout_marginLeft="130dp"
                android:textSize="11dp" />
            <TextView
                android:id="@+id/facilityNumberOfRates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/review_timhortons"
                android:gravity="end"
                android:layout_marginRight="130dp"
                android:textSize="11dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/facilityTitle"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:text="@string/title_timhortons"
                android:textColor="@color/black"
                android:textSize="28dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rate_button"
                android:layout_width="86dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/UBCBlue"
                android:text="@string/button_rate"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/facilityDescriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="@string/title_description"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/facilityDesription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="15dp"
            android:text="@string/description_timhortons"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@color/UBCBlue">
            <TextView
                android:id="@+id/facilityLocationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="5dp"
                android:text="@string/title_location"
                android:textColor="@color/white"
                android:textSize="20dp" />
            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="145dp" />
            <TextView
                android:id="@+id/facilityAddress"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address_timhortons" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/facilityReviews"
            android:orientation="vertical">
            <TextView
                android:id="@+id/facilityReviewsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_reviews"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>